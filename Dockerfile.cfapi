FROM golang:1.17-alpine

ENV GOBIN /go/bin

RUN mkdir -p /app /src/scheduler-for-ocf
ADD . /src/scheduler-for-ocf
WORKDIR /src/scheduler-for-ocf

RUN apk add git bash vim gcc g++ make curl && \
  rm -rf /var/cache/apk/*

RUN go get ./...

RUN go build -o /app/cf-api github.com/cloudfoundry-community/ocf-scheduler/cmd/jecfapi

EXPOSE 8002

CMD ["/app/cf-api", "8002"]
